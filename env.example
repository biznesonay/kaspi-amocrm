# === Kaspi ===
KASPI_API_TOKEN=your_kaspi_api_token_here
KASPI_ALLOWED_STATES=NEW,SIGN_REQUIRED,PICKUP,DELIVERY,KASPI_DELIVERY
KASPI_PAGE_SIZE=100

# === amoCRM ===
AMO_BASE_URL=https://your-subdomain.amocrm.ru
AMO_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
AMO_CLIENT_SECRET=your_amocrm_client_secret
AMO_REDIRECT_URI=https://your-host.example.com/oauth/callback

# Токены доступа (получите через OAuth2 flow)
AMO_ACCESS_TOKEN=your_initial_access_token
AMO_REFRESH_TOKEN=your_initial_refresh_token

# ID воронки и статуса в amoCRM
AMO_PIPELINE_ID=1234567
AMO_STATUS_ID=2345678

# Лимит запросов в секунду (держим < 7 rps)
AMO_RPS=6

# === База данных ===
DB_CLIENT=sqlite
# Для SQLite:
DB_URL=file:./integrator.db
# Для PostgreSQL (раскомментируйте и используйте вместо SQLite):
# DB_URL=postgres://user:password@localhost:5432/integrator

# === Приложение ===
TIMEZONE=Asia/Almaty
DRY_RUN=false

# Версионирование
KASPI_API_VERSION=v1
AMO_API_VERSION=v4
USE_FREE_POSITIONS=true
NOTE_TEMPLATE=Товары Kaspi: {{items}}. Итого: {{total}} тг.

# === Мониторинг и алерты ===
ALERT_FAIL_STREAK=3
ALERT_BACKLOG_THRESHOLD=25
ALERT_HEARTBEAT_MINUTES=5

# Telegram бот (опционально)
ALERT_TELEGRAM_BOT_TOKEN=
ALERT_TELEGRAM_CHAT_ID=

# Email алерты (опционально)
ALERT_EMAIL_TO=support@yourdomain.kz
ALERT_EMAIL_FROM=noreply@yourdomain.kz
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_SMTP_USER=
ALERT_EMAIL_SMTP_PASS=

# === Логирование ===
LOG_LEVEL=info
LOG_PRETTY=false

# === Health check ===
ADMIN_BASIC_USER=admin
ADMIN_BASIC_PASS=change_me